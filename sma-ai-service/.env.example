# FastAPI
APP_ENV=dev
APP_PORT=8000
DEBUG=True

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Java Core Service
JAVA_SERVICE_URL=http://localhost:8080

# RabbitMQ
RABBITMQ_ENABLED=True
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_secure_password_here
RABBITMQ_VHOST=/
RABBITMQ_RESUME_PARSING_REQUEST_QUEUE=resume.parsing.request
RABBITMQ_RESUME_PARSING_RESULT_QUEUE=resume.parsing.result
RABBITMQ_RECONNECT_DELAY_SECONDS=5
RESUME_DOWNLOAD_CONNECT_TIMEOUT_SECONDS=10
RESUME_DOWNLOAD_READ_TIMEOUT_SECONDS=120

# Database (nếu cần)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sma_db

# LLM API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_RESUME_MODEL=gpt-4o-mini  # Recommended: gpt-4o-mini (cheaper) or gpt-4o (better)
OPENAI_REQUEST_TIMEOUT=60

# Vector DB (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=cv_embeddings

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
S3_BUCKET_NAME=sma-cv-storage

# JWT (để verify token từ Java)
JWT_SECRET=your_jwt_secret_must_match_java_service
JWT_ALGORITHM=HS256
